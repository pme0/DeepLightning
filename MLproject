name: deeplightning_project

conda_env: conda_env.yaml
# Can have a docker_env instead of a conda_env, e.g. 
# docker_env:
#    image:  mlflow-docker-example

entry_points:
  
  train:
    parameters:
      cfg: {type: path}
    command: "python3 training.py --cfg {cfg}"
  
  infer:
    parameters:
      cfg: {type: path}
    command: "python3 infer.py --cfg {cfg}"
  